@*Define Model*@
@model IEnumerable<Album>

@*Define ViewData*@
@{
    ViewData["Title"] = "List of Albums";
}

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-6 col-xs-8 border-primary mb-3">
            <div class="card mb-3" style="max-width: 640px;">
                <div class="row g-0">
                    <div class="col-md-12">
                        <div class="card-header text-white bg-warning">
                            <p class="card-text">
                                <h5 class="card-title">
                                    @item.Name
                                    <a class="text-white float-right" asp-action="Edit" asp-route-id="@item.Id"> <i class="bi bi-pencil-square"></i></a>
                                </h5>
                            </p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <img src="@item.ImageURL" width="100%" alt="@item.Name">
                    </div>
                    <div class="col-md-6">
                        <div class="card-body">
                            <p class="card-text"><b>Album: </b>@item.Description</p>
                            <p class="card-text"><b>Streaming: </b>@item.Streaming.Name</p>
                            <p class="card-text"><b>Genre: </b>@item.Genre</p>
                            <p class="card-text"><b>Release Date: </b>@item.ReleaseDate.ToString("dd MMM yy")</p>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="card-footer ">
                            <p class="card-text">
                                <a class="btn btn-outline-primary float-right" asp-action="Detail" asp-route-id="@item.Id"> <i class="bi bi-eye-fill"></i> Details </a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@await Html.PartialAsync("_CreateItem", "Albums")